{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "rootDir": "./",
    "outDir": "dist",
    "types": ["vitest/globals", "node"]
  },
 "include": ["src", "tests", "prisma"],
  "exclude": ["node_modules", "dist"]
}
